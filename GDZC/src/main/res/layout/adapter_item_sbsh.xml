<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_sub"
            android:text="领用单位:"/>

        <TextView
            android:id="@+id/tv_lydw"
            style="@style/text_normal"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_sub"
            android:text="仪器名称:"/>

        <TextView
            android:id="@+id/tv_yqmc"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""/>

        <FrameLayout android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_yishenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@drawable/rect_radius_white"
                android:padding="2dp"
                android:text="已审核"
                android:textColor="@color/gray"
                android:visibility="gone"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_shenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@drawable/rect_radius_red_white"
                android:padding="2dp"
                android:text="审核"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/text_sub"
                android:text="单&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;价:"/>

            <TextView
                android:id="@+id/tv_dj"
                style="@style/text_normal"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/text_sub"
                android:text="型&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;号:"/>

            <TextView
                android:id="@+id/tv_xh"
                style="@style/text_normal"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>